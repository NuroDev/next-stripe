{
  "name": "@nurodev/next-stripe",
  "version": "0.1.1",
  "description": "Simplified server-side Stripe workflows in Next.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/nurodev/next-stripe.git"
  },
  "homepage": "https://github.com/nurodev/next-stripe",
  "bugs": "https://github.com/nurodev/next-stripe/issues",
  "author": {
    "name": "nurodev",
    "email": "me@nuro.dev",
    "url": "https://nuro.dev"
  },
  "keywords": [
    "next",
    "next.js",
    "stripe"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    "client": {
      "import": "./dist/client.mjs",
      "require": "./dist/client.js"
    },
    "server": {
      "import": "./dist/server.mjs",
      "require": "./dist/server.js"
    }
  },
  "files": [
    "dist/**/*",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "rimraf dist && tsup",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "dev": "npm run build -- --watch",
    "test": "jest"
  },
  "dependencies": {
    "stripe": "8.132.0"
  },
  "devDependencies": {
    "@types/node": "^16.11.6",
    "cross-env": "^7.0.3",
    "rimraf": "^3.0.2",
    "tsup": "^5.5.0",
    "typescript": "^4.4.4"
  }
}
